# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    id: main_box
    orientation: 'horizontal'
    Popup:
        id: popup
        title: 'Message'
        title_align: 'center'
        size_hint: 0.6, 0.3
        on_parent:
            # Make popup disappear immediately
            if self.parent == main_box: self.parent.remove_widget(self)
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: popup_message
                size_hint_y: 1.5
            Button:
                size_hint_y: 0.75
                text: 'OK'
                on_press: app.handle_close_popup()
    BoxLayout:
        size_hint_x: 0.25
        orientation: 'vertical'
        Label:
            text: 'Sort by:'
        Spinner:
            # Spinner list
            text: app.sort_by
            # Default value
            values: app.category
            on_text: app.sort_movies(self.text)
        Label:
            text: 'Add New Movie:'
        Label:
            text: 'Title'
        TextInput:
            id: title
        Label:
            text: 'Category'
        TextInput:
            id: category
        Label:
            text: 'Year'
        TextInput:
            id: year
        Button:
            text: 'Add Movie'
            on_press: app.handle_add_movie(title.text, year.text, category.text)
        Button
            text: 'Clear'
            on_press: app.handle_clear_button()

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: watch_count
        Spinner:
            text: app.current_order
            values: app.order
            on_text: app.handle_order(self.text)
        ScrollView:
            id: scroll_movie
            do_scroll_x: False
            do_scroll_y: True
            size_hint_y: 4
            BoxLayout:
                id: movie_list
                orientation: "vertical"
                size_hint_y: None
                padding: 20, 20, 20, 20
        Label:
            id: message
            text: ''
        Label:
            text: 'Search:'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint_x: 1.3
                text: 'Title (key):'
            TextInput:
                id: title_search
                size_hint_x: 4
            Label:

                text: 'Year'
            TextInput:
                id: year_search
            Label:
                text: 'Category'
            TextInput:
                id: category_search
            Label:
                size_hint_x: 1.5
                text: 'Watched (Y/N)'
            TextInput:
                id: watch_search
        Button:
            text: 'Search Movie'
            on_press: app.handle_search(title_search.text, year_search.text, category_search.text, watch_search.text)
        Button:
            text: 'Clear search'
            on_press: app.handle_clear_search()

# Apply for all text input
<TextInput>
    text_size: self.size
    multiline: False
